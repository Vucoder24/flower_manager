<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".ui.home.fragment.FlowerFragment">

    <TextView
        android:id="@+id/title_array_flower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="@string/title_array_flower"
        android:textColor="@color/my_light_primary"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/deleteToolbar"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/btnConfirmDelete"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_500"
            android:text="@string/action_delete_selection"
            android:textAllCaps="false"
            android:padding="5dp"
            android:textColor="?attr/colorOnError"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/btnClearSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_light_primary"
            android:contentDescription="@string/action_clear_selection"
            android:text="@string/action_clear_selection"
            android:layout_marginStart="12dp"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnError"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            tools:ignore="ButtonStyle,TextContrastCheck" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlowerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        tools:listitem="@layout/item_flower" />

</LinearLayout>