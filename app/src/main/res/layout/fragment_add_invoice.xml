<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.fragment.AddInvoiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Thông tin khách hàng -->
        <TextView
            android:id="@+id/title_add_flower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/my_light_primary"
            android:textSize="26sp"
            android:text="@string/title_add_invoice" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_name_customer"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên khách hàng"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_sdt"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtCustomerPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:minHeight="48dp"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_address"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtCustomerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_sale"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edtSale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảm giá(k)"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="HardcodedText,VisualLintTextFieldSize" />

        <!-- Nút chọn hoa -->
        <Button
            android:id="@+id/btnAddFlower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_add_flower_invoice"
            android:textAllCaps="false"
            android:padding="8dp"
            app:cornerRadius="25dp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        <!-- Danh sách hoa đã chọn -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInvoiceFlowers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/textColorPrimary"/>
        <!-- Tổng kết -->
        <TextView
            android:id="@+id/txtCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="Tổng: 0 bó"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtTotalIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Tổng thu: 0"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtTotalProfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"
            android:text="Tổng lợi nhuận: 0"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSaveInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:padding="12dp"
            android:text="@string/action_save_invoice"
            android:textSize="18sp"
            android:textAllCaps="false"
            app:cornerRadius="25dp"
            tools:ignore="TextContrastCheck,VisualLintButtonSize,TouchTargetSizeCheck" />

    </LinearLayout>

</ScrollView>
